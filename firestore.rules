rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Tests public access (Read/Update counters)
    match /tests/{testId} {
      allow read: if true;
      allow update: if true; // Increments allowed
    }

    // User Data (Private)
    match /users/{userId} {
      // Allow Read/Write if Request UID matches Document ID
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcollection Results
      match /results/{resultId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
